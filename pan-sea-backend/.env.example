# Application Configuration
APP_NAME=Pan-Sea Backend
DEBUG=false
VERSION=1.0.0

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Database Configuration
DATABASE_URL=your_postgresql_database_url_here
DATABASE_URL_ASYNC=your_postgresql_async_database_url_here

# Security
SECRET_KEY=your_secret_key_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# OpenAI Configuration (Legacy)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-5-mini

# Sea Lion AI Configuration
SEA_LION_API_KEY=your_sea_lion_api_key_here
SEA_LION_MODEL=aisingapore/Llama-SEA-LION-v3-70B-IT
SEA_LION_BASE_URL=https://api.sea-lion.ai/v1

# Redis Configuration
REDIS_URL=redis://localhost:6379

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads

# Audio Processing Configuration
AUDIO_CHUNK_DURATION=30
SUPPORTED_AUDIO_FORMATS=.wav,.mp3,.m4a,.ogg

# Local Whisper Configuration
WHISPER_MODEL_SIZE=base
WHISPER_DEVICE=cpu

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
AWS_REGION=us-east-1
AWS_S3_BUCKET=your_s3_bucket_name_here
AWS_S3_ENDPOINT_URL=
AWS_S3_USE_SSL=true
AWS_S3_VERIFY_SSL=true
