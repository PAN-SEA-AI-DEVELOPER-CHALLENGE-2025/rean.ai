# Khmer Whisper Model Configuration Example
# Copy relevant settings to your .env file

# Enable specialized Khmer Whisper model from Hugging Face
USE_KHMER_WHISPER_HF=true

# Specify the Khmer model (ksoky's fine-tuned model with 29.5% WER)
KHMER_WHISPER_MODEL_ID=ksoky/whisper-large-khmer-asr

# Device configuration (auto detects CUDA if available)
WHISPER_DEVICE=auto

# Keep original Whisper model as fallback
WHISPER_MODEL=base

# Other transcription settings
WHISPER_LANGUAGE=km
VAD_AGGRESSIVENESS=2
MIN_CHUNK_DURATION=1.5
MAX_CHUNK_DURATION=5.0

# For external transcription service (optional)
# TRANSCRIPTION_SERVICE_URL=http://3.234.216.146:8000/transcribe/khmer
# TRANSCRIPTION_SERVICE_TIMEOUT=300

# Server settings
HOST=0.0.0.0
PORT=8000
DEBUG=true
LOG_LEVEL=INFO
